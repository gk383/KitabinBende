@model KitabinBende.MvcWeb.Models.ViewModels.AccountLoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#" class="active">login</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- user-login-area-start -->
<div class="user-login-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Giriş Yap</h2>
                    @*<p>doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo<br>inventore veritatis et quasi architecto beat</p>*@
                </div>
            </div>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
                <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
                    <div class="login-form">
                        <div class="single-login">
                            <div class="formObject">
                                <label>Kullanıcı Adı<span>*</span></label>
                                <input asp-for="UserName" type="text" />
                                <span asp-validation-for="UserName"></span>
                            </div>
                        </div>
                        <div class="single-login">
                            <div class="formObject">
                                <label>Şifre <span>*</span></label>
                                <input asp-for="Password" type="password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="single-login single-login-2">
                            <input type="submit" value="Giriş">
                            <input asp-for="RememberMe" class="rememberme" type="checkbox">
                            <span>Beni Hatırla</span>
                        </div>
                        <a href="#">Şifremi unuttum?</a> - <a href="~/account/register">Kayıt Ol</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- user-login-area-end -->
