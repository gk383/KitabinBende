@using System.Threading.Tasks
@model KitabinBende.MvcWeb.Models.ViewModels.AccountRegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#" class="active">register</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<div class="user-login-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Kayıt Ol</h2>
                    @*<p>doloremque laudantium, totam rem aperiam, eaque ipsa quae ab illo<br>inventore veritatis et quasi architecto beat</p>*@
                </div>

            </div>
            <form asp-controller="Account" asp-action="Register" method="post" role="form">
                <div class="col-lg-offset-2 col-lg-8 col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
                    <div class="billing-fields">
                        @if (ViewData["message"] != null)
                        {
                            <div class="single-register">
                                <div class="alert alert-info" role="alert"> @Html.Raw(ViewData["message"])</div>
                            </div>
                        }
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <div class="formObject">
                                        <label>Ad<span>*</span></label>
                                        <input asp-for="FirstName" type="text" />
                                        <span asp-validation-for="FirstName"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <div class="formObject">
                                        <label>Soyad<span>*</span></label>
                                        <input asp-for="LastName" type="text" />
                                        <span asp-validation-for="LastName"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <div class="formObject">
                                        <label>Doğum Tarihi<span>*</span></label>
                                        <input asp-for="BirthDate" type="date" />
                                        <span asp-validation-for="BirthDate"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <label>Cinsiyet<span>*</span></label>
                                    <select asp-for="GenderId" class="chosen-select" tabindex="1" style="width:100%;" data-placeholder="Default Sorting">
                                        <option value="1">Kadın</option>
                                        <option value="2">Erkek</option>
                                    </select>
                                    <span asp-validation-for="GenderId"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <div class="formObject">
                                        <label>Email<span>*</span></label>
                                        <input asp-for="Email" type="email" />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="single-register">
                                    <div class="formObject">
                                        <label>Cep Telefonu<span>*</span></label>
                                        <input asp-for="Phone" type="tel" />
                                        <span asp-validation-for="Phone"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="single-register">
                            <div class="formObject">
                                <label>Kullanıcı Adı<span>*</span></label>
                                <input asp-for="UserName" type="text" />
                                <span asp-validation-for="UserName"></span>
                            </div>
                        </div>
                        <div class="single-register">
                            <div class="formObject">
                                <label>Şifre<span>*</span></label>
                                <input asp-for="Password" type="password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="single-register">
                            <div class="formObject">
                                <label>Şifre Tekrar<span>*</span></label>
                                <input asp-for="ConfirmPassword" type="password" />
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="single-register single-register-3">
                            <input id="rememberme" type="checkbox" name="rememberme" value="forever">
                            <label class="inline">I agree <a href="#">Terms & Condition</a></label>
                        </div>

                        <div class="single-register">
                            <input type="submit" value="Kayıt Ol">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

